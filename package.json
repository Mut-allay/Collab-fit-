{
  "name": "fitspark",
  "version": "0.1.0",
  "private": true,
  "description": "FitSpark - AI-powered fitness tracking and coaching platform",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "setup": "pnpm install && turbo run setup",
    "deploy": "pnpm run build && firebase deploy",
    "deploy:hosting": "pnpm run build --filter=@fitspark/web && firebase deploy --only hosting"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "turbo": "^2.2.3",
    "prettier": "^3.3.3",
    "eslint": "^9.15.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^18.3.12",
      "@types/react-dom": "^18.3.1"
    }
  }
}
