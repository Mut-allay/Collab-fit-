{
  "version": 2,
  "buildCommand": "turbo run build:production --filter=@fitspark/web && cp -r apps/web/dist dist",
  "outputDirectory": "dist",
  "installCommand": "pnpm install --frozen-lockfile",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/dist/assets/$1"
    },
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot))",
      "dest": "/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/sync-google-fit",
      "schedule": "0 12 * * *"
    },
    {
      "path": "/api/update-leaderboards",
      "schedule": "0 0 * * *"
    }
  ],
  "env": {
    "FIREBASE_API_KEY": "AIzaSyAI_StR3wQSNcEZb78eFrVdz5HoGaXgcHg",
    "FIREBASE_AUTH_DOMAIN": "fitspark-2.firebaseapp.com",
